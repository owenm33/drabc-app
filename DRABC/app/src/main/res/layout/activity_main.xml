<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <LinearLayout
        android:id="@+id/main_view_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.MainActivity">

        <Button
            android:id="@+id/danger_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#0A090A"
            android:onClick="onDanger"
            android:text="D"
            android:textColor="#CDDC39"
            android:textSize="@dimen/_30ssp" />

        <Button
            android:id="@+id/response_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#0D0C0F"
            android:onClick="onResponse"
            android:text="R"
            android:textColor="#E91E63"
            android:textSize="@dimen/_30ssp" />

        <Button
            android:id="@+id/airways_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#0C0C0C"
            android:onClick="onAirways"
            android:text="A"
            android:textColor="#2196F3"
            android:textSize="@dimen/_30ssp" />

        <Button
            android:id="@+id/breathing_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#0D0F0F"
            android:onClick="onBreathing"
            android:text="B"
            android:textColor="#4CAF50"
            android:textSize="@dimen/_30ssp" />

        <Button
            android:id="@+id/compressions_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#0F0B11"
            android:onClick="onCompressions"
            android:text="C"
            android:textColor="#9C27B0"
            android:textSize="@dimen/_30ssp" />

    </LinearLayout>
</layout>
