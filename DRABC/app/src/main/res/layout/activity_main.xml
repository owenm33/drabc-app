<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/danger_button"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:layout_alignparentTop="true"
            android:background="@color/colorAccent"
            android:text="D"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/response_button"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:layout_below="@id/danger_button"
            android:layout_marginTop="-2dp"
            android:background="@android:color/holo_orange_light"
            android:text="R"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/airways_button"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:layout_below="@id/response_button"
            android:background="@android:color/holo_green_dark"
            android:text="A"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/breathing_button"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:layout_below="@id/airways_button"
            android:background="@android:color/holo_blue_light"
            android:text="B"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/compressions_button"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:layout_below="@id/breathing_button"
            android:background="@android:color/holo_purple"
            android:text="C"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />
    </RelativeLayout>
</layout>