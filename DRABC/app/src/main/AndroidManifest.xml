<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.drabc">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.DescriptionActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activities.CallAmbulanceActivity"
            android:theme="@style/MyDialogActivityTheme" />
        <activity
            android:name=".activities.DangerNumbersActivity"
            android:theme="@style/MyDialogActivityTheme" />
        <activity
            android:name=".activities.DangerActivity"
            android:theme="@style/MyDialogActivityTheme" />
        <activity
            android:name=".activities.ResponseActivity"
            android:theme="@style/MyDialogActivityTheme" />
        <activity
            android:name=".activities.AirwaysActivity"
            android:theme="@style/MyDialogActivityTheme" />
        <activity
            android:name=".activities.BreathingActivity"
            android:theme="@style/MyDialogActivityTheme" />
        <activity
            android:name=".activities.CompressionsActivity"
            android:theme="@style/MyDialogActivityTheme" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>